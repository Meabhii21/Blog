<%-include("partials/header");%>
<div class="ui main text container segment">
    <div class="ui huge header">Fashion Blog</div>
<div class="ui items">
<% blogs.forEach(function(blog){ %>
  <div class="item">
    <div class="image">
      <img src="<%=blog.image%>">
    </div>
    <div class="content">
      <a class="header"><h1><%=blog.title%></h1></a>
      <div class="meta">
        <p><%=blog.created.toDateString()%></p>
      </div>
      <div class="description">
            <p><%-blog.body.substring(0, 100)%>...</p>
      </div>
      <div class="extra">
        <a class="ui blue button" href="/blogs/<%=blog._id%>">Read More<i class="angle right icon"></i></a>
      </div>
    </div>
  </div>
  <% }); %>
</div>
</div>

